shell-integration=zsh
font-family=JetBrains Mono
font-size=11
window-padding-x = 8
window-padding-y = 4
window-decoration = server
theme=catppuccin-mocha

# Keybinds
keybind = shift+alt+l=new_split:right
keybind = shift+alt+h=new_split:left
keybind = shift+alt+k=new_split:up
keybind = shift+alt+j=new_split:down
keybind = shift+alt+[=goto_split:previous
keybind = shift+alt+]=goto_split:next
keybind = +alt+l=goto_split:right
keybind = alt+h=goto_split:left
keybind = alt+k=goto_split:up
keybind = alt+j=goto_split:down
keybind = ctrl+alt+k=scroll_page_up
keybind = ctrl+alt+j=scroll_page_down
